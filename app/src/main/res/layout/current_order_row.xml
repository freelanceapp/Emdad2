                <FrameLayout
                    android:id="@+id/flImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/colorPrimary"
                        order_image='@{model.market!=null?model.market.logo:""}'
                        />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userImage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom|end"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="1dp"

                        />
                    <com.github.ybq.android.spinkit.SpinKitView
                        android:id="@+id/loadView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom|end"
                        style="@style/SpinKitView.Small.DoubleBounce"
                        app:SpinKit_Style="DoubleBounce"
                        android:visibility="gone"
                        app:SpinKit_Color="@color/colorPrimary"
                        />

                </FrameLayout>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/flImage"
                    app:layout_constraintStart_toEndOf="@id/flImage"
                    app:layout_constraintEnd_toStartOf="@id/flOrderId"
                    android:lines="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="13sp"
                    android:textColor="@color/gray9"
                    android:text="@{model.market!=null?model.market.name:(model.market_name.isEmpty()?model.market_address:model.market_name)}"
                    android:ellipsize="end"
                    app:layout_constraintHorizontal_weight=".65"
                    />
               <FrameLayout
                   android:id="@+id/flOrderId"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toTopOf="@id/flImage"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@id/tvName"
                   android:layout_marginStart="10dp"
                   android:layout_marginEnd="10dp"
                   app:layout_constraintHorizontal_weight=".35"

                   >
                   <TextView
                       android:id="@+id/tvOrderId"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/gray6"
                       android:textSize="15sp"
                       android:lines="1"
                       android:ellipsize="end"
                       android:text='@{"#"+model.id}'
                       android:layout_gravity="center_vertical|end"
                       />
               </FrameLayout>

