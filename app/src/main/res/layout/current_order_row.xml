                    android:layout_marginEnd="8dp"
                    android:textColor="@color/gray9"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"
                    android:text='@{model.market!=null?String.valueOf(Double.parseDouble(model.market.rating)):"0.0"}'
                    />-->

                <TextView
                    android:id="@+id/tvOrderText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/flImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:lines="1"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintWidth_default="wrap"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/gray9"
                    android:text="@{model.details}"
                    />
                <TextView
                    android:id="@+id/tvWaitAcceptOffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/llOffer"
                    app:layout_constraintBottom_toBottomOf="@id/llOffer"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:text="@string/waiting_for_accepting_offers"
                    android:visibility="gone"
                    />
                <FrameLayout
                    android:id="@+id/llOffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvOrderText"
                    >
                    <com.bhargavms.dotloader.DotLoader
                        android:id="@+id/tvLoading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:dot_radius="3dp"
                        app:number_of_dots="3"
                        app:color_array="@array/dots"
                        android:visibility="invisible"
                        android:layout_gravity="center"
                        android:rotation='@{lang.equals("ar")?180:0}'
                        />
                    <LinearLayout
                        android:id="@+id/llOfferCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:background="@drawable/rounded_primary"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:visibility="invisible"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:text='@{model.offers_count+" "+@string/offer}'
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_right_arrow"
                            android:tint="@color/white"
                            android:padding="2dp"
                            android:rotation='@{lang.equals("ar")?180:0}'
                            />

                    </LinearLayout>

                </FrameLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/llLate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray2"
                    android:layout_marginBottom="10dp"
                    />
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_clock"
                        android:tint="@color/color_red"
                        android:padding="3dp"
                        />
                    <TextView
                        android:id="@+id/tvLateTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="11sp"
                        android:textColor="@color/color_red"
                        android:lines="1"
                        android:ellipsize="end"
                        tools:ignore="SmallSp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_account_balance"
                        android:tint="@color/gray4"
                        android:padding="3dp"
                        />
                    <TextView
                        android:id="@+id/tvDeliveryCost"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="11sp"
                        android:textColor="@color/gray6"
                        android:lines="1"
                        android:ellipsize="end"

                        tools:ignore="SmallSp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOrderStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray2"
                    />
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:gravity="center_vertical"
                   >
                   <FrameLayout
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       >
                       <ProgressBar
                           android:id="@+id/progBar"
                           android:layout_width="150dp"
                           android:layout_height="6dp"
                           style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                           android:progressDrawable="@drawable/horizontal_progress"
                           android:max="4"
                           android:progress="0"
                           />

                   </FrameLayout>
                   <ImageView
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@drawable/ic_right_arrow"
                       android:tint="@color/gray6"
                       android:padding="3dp"
                       android:rotation='@{lang.equals("ar")?180:0}'
                       />
               </LinearLayout>
            </LinearLayout>

           <!-- <TextView
                android:id="@+id/tvDetails"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="@string/order_details"
                android:gravity="center"
                />-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>