<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray1"
            >

            <FrameLayout
                android:id="@+id/fragment_app"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="56dp"
                app:layout_constraintTop_toTopOf="parent"

                />

            <FrameLayout
                android:id="@+id/flBottomAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/gray1"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/transparent"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/bottom_nav"
                        android:scaleType="fitXY"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_gravity="center"
                        android:background="@color/transparent"

                        >

                        <LinearLayout
                            android:id="@+id/llStore"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:background="@color/transparent"
                            >

                            <ImageView
                                android:id="@+id/iconStore"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_shop"
                                android:tint="@color/colorPrimary"

                                />

                            <TextView
                                android:id="@+id/tvStore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/stores"
                                android:textColor="@color/colorPrimary"
                                android:textSize="11sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/llOrder"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@color/transparent"

                            >

                            <ImageView
                                android:id="@+id/iconOrder"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_delivery_truck"
                                android:tint="@color/gray11" />

                            <TextView
                                android:id="@+id/tvOrder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order"
                                android:textColor="@color/gray11"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <Space
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            />
                        <LinearLayout
                            android:id="@+id/llNotification"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@color/transparent"

                            >

                            <ImageView
                                android:id="@+id/iconNotification"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_megaphone"
                                android:tint="@color/gray11" />

                            <TextView
                                android:id="@+id/tvNotification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/notifications"
                                android:textColor="@color/gray11"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llProfile"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@color/transparent"

                            >

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imageProfile"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/image_avatar"
                                android:tint="@color/color4"
                                app:civ_border_color="@color/black"
                                app:civ_border_width="1px" />

                            <TextView
                                android:id="@+id/tvProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/profile"
                                android:textColor="@color/gray11"
                                android:textSize="11sp" />
                        </LinearLayout>


                    </LinearLayout>

                </FrameLayout>


            </FrameLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/logo_e"
                app:elevation="2dp"
                app:fabSize="normal"
                app:layout_anchor="@+id/flBottomAppBar"
                android:transitionName="fab"
                app:layout_anchorGravity="center_horizontal"
                tools:ignore="UnusedAttribute"
                android:layout_gravity="center"

                >

            </com.google.android.material.floatingactionbutton.FloatingActionButton>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <FrameLayout
            android:id="@+id/flLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray1"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:text="@string/fetching_location"/>
            </LinearLayout>
        </FrameLayout>

    </FrameLayout>
</layout>
